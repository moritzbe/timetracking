<% if @entry.errors.any? %>
	 <% @entry.errors.full_messages.each do |error_msg| %>
	 <ul>
	 <li><%= error_msg %></li>
	 </ul>
	 <% end %>
<% end %>






<h1> Entry </h1>
<%=@entry.comments %>
<br>
<br>



<%= form_for [@project, @entry] do |f| %>
 <%= f.label :hours %>
 <%= f.text_field :hours, size: 4 %>
 <br>
 <%= f.label :minutes %>
 <%= f.text_field :minutes, size: 4 %>
 <br>
 <%= f.label :date %>
 <%= f.date_field :date, size: 4 %>
 <br>
 <%= f.label :comments %>
 <%= f.text_area :comments %>
 <br>
 <%= f.submit 'Save' %>
 <%= link_to 'Cancel', project_entries_path(@project) %>
<% end %>